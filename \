    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
<script type="text/javascript">
    $(document).ready(function(){

          //PAGE CHANGING
          //WRITE ANY ADDITIONAL PAGES IN HERE
          var pages = ["#home", "#table", "#plotting"]

          function changer(pagename){
            for (i=0; i!=pages.length; i++){
                    $(pages[i]).hide();
             }
             $(pagename).show();
          }

          changer("#home");

          for (i=0; i!=pages.length; i++){
            $("a[href="+pages[i]+"]").click(pages[i], function( event ) {
              changer(event.data);
              console.log(event.data);
            });
          }

          //COLUMN CHANGING (Credit, Ligo 2 years)
          $('#show-hide-columns input[type=checkbox]').change(function () {
            var isChecked = $(this).prop('checked');
            if (isChecked)
              $('.' + this.name).stop().show();
            else
              $('.' + this.name).stop().hide();
            // Trigger window resize to update lazy image loading
            $(window).trigger('resize');
          });

        });
    </script>


  </head>
